# Flow Proxy Plugin Environment Variables
# Copy this file to .env and update with your values

# Server Configuration
# Port to listen on (default: 8899)
FLOW_PROXY_PORT=8899

# Host to bind to (default: 127.0.0.1)
# Use 0.0.0.0 to listen on all interfaces
FLOW_PROXY_HOST=127.0.0.1

# Logging Configuration
# Log level: DEBUG, INFO, WARNING, ERROR (default: INFO)
FLOW_PROXY_LOG_LEVEL=INFO

# Secrets Configuration
# Path to secrets.json file (default: secrets.json)
FLOW_PROXY_SECRETS_FILE=secrets.json

# Optional: Custom log file path
# FLOW_PROXY_LOG_FILE=flow_proxy_plugin.log

# Log Cleanup Settings
# Enable automatic log cleanup (default: true)
FLOW_PROXY_LOG_CLEANUP_ENABLED=true

# Number of days to retain log files (default: 7)
FLOW_PROXY_LOG_RETENTION_DAYS=7

# Interval in hours between log cleanup runs (default: 24)
FLOW_PROXY_LOG_CLEANUP_INTERVAL_HOURS=24

# Maximum size of log directory in MB, 0 = unlimited (default: 100)
FLOW_PROXY_LOG_MAX_SIZE_MB=100

# Optional: Target Flow LLM Proxy URL
# FLOW_PROXY_TARGET_URL=https://flow.ciandt.com/flow-llm-proxy

# Concurrency Settings (New in v0.1.3 - for high concurrency support)
# Number of worker processes (default: CPU count)
# Increase this for better handling of concurrent requests
FLOW_PROXY_NUM_WORKERS=8

# Enable threaded mode for better concurrency (1=enabled, 0=disabled, default: 1)
# Highly recommended for production environments with high load
FLOW_PROXY_THREADED=1

# Development Settings
# Uncomment for development
# FLOW_PROXY_LOG_LEVEL=DEBUG
# FLOW_PROXY_PORT=9000

# Production Settings
# Uncomment for production
# FLOW_PROXY_HOST=0.0.0.0
# FLOW_PROXY_LOG_LEVEL=WARNING
# FLOW_PROXY_SECRETS_FILE=/etc/flow-proxy/secrets.json
